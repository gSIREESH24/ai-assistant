{
  "name": "my-assistant-app",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "node server/index.js",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "cd frontend && npm run build && electron-builder"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "chrome-remote-interface": "^0.31.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "wait-on": "^7.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.2.0"
  }
}